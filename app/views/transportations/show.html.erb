<legend><h3><%= @transportation.company_name %></h3></legend>
<div class = "jumbotron">
    <div class ="row">
      <ul>
        <li>Username: <%= @transportation.username %></li>
        <li>Address: <%= @transportation.address_1 %> <%= @transportation.address_2 %></li>
                     <%= @transportation.city %>, <%= @transportation.state %> <%= @transportation.zip %>      
        <li>Phone: <%= @transportation.phone %></li>
        <li>Email: <%= @transportation.email %></li>
      </ul>
    </div>
    <%= link_to "See All Rides", "/ride", class: "btn btn-default" %>
    <br>
    <br>

    <% if admin_signed_in? %>
      <%= link_to "Edit Transportation", "/transportation/#{@transportation.id}/edit_transportation", class: "btn btn-default" %> 
      <%= link_to "Delete Transportation", "/transportation/#{@transportation.id}", {method: :delete, class: "btn btn-default"} %>
    <% end %>
    <%= link_to "Back to list", "/transportation", class: "btn btn-default" %> 
     
</div>