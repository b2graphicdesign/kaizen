<legend><h3>Ride ID: <%= @ride.id %></h3></legend>
<div class = "jumbotron">
    <div class ="row">
      <ul>
        <li>Patient: <%= @ride.patient.first_name %> <%= @ride.patient.last_name %></li>
        <li>Appointment Date: <%= @ride.appointment_time.strftime("%m/%d/%Y") %></li>
        <li>Appointment Time: <%= @ride.appointment_time.strftime("%m/%d/%Y %H:%M %P") %></li>
        <li>Pick Up Time: <%= @ride.expected_start_time.strftime("%m/%d/%Y %H:%M %P") %></li>
        <li>Drop Off Time: <%= @ride.expected_end_time.strftime("%m/%d/%Y %H:%M %P") %></li>
        <li>Type of Ride: <%= @ride.ride_type %></li>
      </ul>
    </div>

  <% if admin_signed_in? || provider_signed_in? && (current_provider.id == @ride.provider_id) %>
    <%= link_to  "Edit Ride", "/ride/#{@ride.id}/edit", class: "btn btn-default" %>
    <%= link_to "Delete Ride", "/ride/#{@ride.id}", { method: :delete, class: "btn btn-default"} %>
  <% end %>
  <%= link_to "Back to list", "/ride", class: "btn btn-default" %>
</div>