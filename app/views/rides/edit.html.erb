<legend>Update a Ride</legend>
<div class="jumbotron">
<% if @ride.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@ride.errors.count, "error") %> prohibited this patient from being saved:</h2>
 
    <ul>
    <% @ride.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<br>
<h3>Ride No. <%= @ride.id %> for <%= @ride.patient.first_name %> <%= @ride.patient.last_name %>:</h3>
  <%= form_tag "/ride/#{@ride.id}", method: :patch do %>
  <h6>Appointment Time:</h6>
  <div class='input-group date' id='datetimepicker1'>
    <input type='text' class="form-control" name="appointment_time"/>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <script type="text/javascript">
    $(function () {
      $('#datetimepicker1').datetimepicker({
        defaultDate: "<%= @ride.appointment_time.strftime("%A, %d %b %Y %l:%M %p")%>"
      });
    });
  </script>
  <h6>Expected Start Time:</h6>
  <div class='input-group date' id='datetimepicker2'>
    <input type='text' class="form-control" name="expected_start_time"/>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <script type="text/javascript">
    $(function () {
      $('#datetimepicker2').datetimepicker({
        defaultDate: "<%= @ride.expected_start_time.strftime("%A, %d %b %Y %l:%M %p") %>"
      });
    });
  </script>
  <h6>Expected End Time:</h6>
  <div class='input-group date' id='datetimepicker3'>
    <input type='text' class="form-control" name="expected_end_time"/>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>
  <script type="text/javascript">
    $(function () {
      $('#datetimepicker3').datetimepicker({
        defaultDate: "<%= @ride.expected_end_time.strftime("%A, %d %b %Y %l:%M %p") %>"
      });
    });
  </script>
  <h6>Expected Mileage:</h6>
  <div>
    <%= text_field_tag :expected_mileage, @ride.expected_mileage %>
  </div>
  <h6>Ride Type:</h6>
  <div>
    <%= text_field_tag :ride_type, @ride.ride_type %>
  </div>
  <div>
    <%= hidden_field_tag :patient_id, @ride.patient_id %>
  </div>
  <div>
    <%= hidden_field_tag :provider_id, @ride.patient.provider_id %>
  </div>
  <div>
      <%= submit_tag "Update Ride", class: "btn btn-default" %>
  </div>

  <% end %>
</div>