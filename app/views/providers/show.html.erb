<legend><h3><%= @provider.facility_name %></h3></legend>
<div class = "jumbotron">
    <div class ="row">
      <ul>
        <li>Username: <%= @provider.username %></li>
        <li>Address: <%= @provider.address_1 %> <%= @provider.address_2 %></li>
                     <%= @provider.city %>, <%= @provider.state %>  
        <li>Notes: <%= @provider.address_notes %></li>
        <li>Phone: <%= @provider.phone %></li>
        <li>Fax: <%= @provider.fax %></li>
        <li>Email: <%= @provider.email%></li>
      </ul>
    </div>
    <%= link_to "See All Rides", "/ride", class: "btn btn-default" %>
    <br>
    <br>

    <% if admin_signed_in? %>
      <%= link_to "Edit Provider", "/provider/#{@provider.id}/edit_provider", class: "btn btn-default" %>
      <%= link_to "Delete Provider", "/provider/#{@provider.id}", {method: :delete, class: "btn btn-default"} %>
      <%= link_to "Back to list", "/provider", class: "btn btn-default" %>
    <% end %>
    <%= link_to "Homepage", "/", class: "btn btn-default" %>
</div>