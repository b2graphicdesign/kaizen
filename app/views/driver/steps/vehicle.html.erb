<%= form_for @driver, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>


<fieldset>
    <legend>New Driver - Step 3 of 3</legend>
      <div class="jumbotron">
        <div>
          <%= f.text_field :vehicle_year, placeholder: "Vehicle Year" %>
        </div>
        <div>
          <%= f.text_field :vehicle_make, placeholder: "Vehicle Make" %>
        </div>
        <div>
          <%= f.text_field :vehicle_model, placeholder: "Vehicle Model" %>
        </div>
        <div>
          <%= f.text_field :vehicle_type, placeholder: "Vehicle Type" %>
        </div>
        <div>
          <%= f.text_field :vehicle_color, placeholder: "Vehicle Color" %>
        </div>
        <div>
          <%= f.text_field :vehicle_license_plate, placeholder: "Vehicle License Plate" %>
        </div>
        <div>
          <%= f.text_field :vehicle_license_expiry, placeholder: "Vehicle License Expiry" %>
        </div>
        <div>
          <%= f.submit 'Add Driver' %>
        </div>
      </div>
  </fieldset>
<% end %>