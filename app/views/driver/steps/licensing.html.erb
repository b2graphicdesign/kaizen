<%= form_for @driver, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

<fieldset>
    <legend>New Driver - Step 2 of 3</legend>
      <div class="jumbotron">
        <div>
          <%= f.text_field :insurance_company, placeholder: "Insurance Company" %>
        </div>
        <div>
          <%= f.text_field :insurance_account, placeholder: "Insurance Account #" %>
        </div>
        <div>
          <%= f.text_field :drivers_license_state, placeholder: "Drivers License State" %>
        </div>
        <div>
          <%= f.text_field :drivers_license_no, placeholder: "Drivers License #" %>
        </div>
        <div>
          <%= f.text_field :drivers_license_expiry, placeholder: "Drivers License Exp. Date" %>
        </div>
        <div>
          <%= f.submit 'Next Step', class: "btn btn-default" %>
        </div>
      </div>
  </fieldset>
<% end %>