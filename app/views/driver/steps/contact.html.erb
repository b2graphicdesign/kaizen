<%= form_for @driver, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

<fieldset>
    <legend>New Driver - Step 1 of 3</legend>
      <div class="jumbotron">
        <div>
          <%= f.text_field :transport_id, placeholder: "Transportation ID" %>
        </div>
        <div>
          <%= f.text_field :username, placeholder: "Username" %>
        </div>
        <div>
          <%= f.text_field :first_name, placeholder: "First name" %>
        </div>
        <div>
          <%= f.text_field :last_name, placeholder: "Last name" %>
        </div>
        <div>
          <%= f.text_field :address_1, placeholder: "Address 1" %>
        </div>
        <div>
          <%= f.text_field :address_2, placeholder: "Address 2" %>
        </div>
        <div>
          <%= f.text_field :city, placeholder: "City" %>
        </div>
        <div>
          <%= f.text_field :state, placeholder: "State" %>
        </div>
        <div>
          <%= f.text_field :zip, placeholder: "Zip Code" %>
        </div>
        <div>
          <%= f.text_field :phone, placeholder: "Phone Number" %>
        </div>
        <div>
          <%= f.text_field :email, placeholder: "Email" %>
        </div>
        <div>
          <%= f.submit 'Next Step', class: "btn btn-default" %>
        </div>
      </div>
  </fieldset>
<% end %>